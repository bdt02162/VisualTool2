<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/myshape"
    tools:context="com.example.jeon.visualtool2.VisualTool2Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입:사용자 등록"
        android:textColor="#000"
        android:textSize="12pt"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:text="이름:"
        android:textColor="#000"
        android:textSize="7pt"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="67dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:text="아이디:"
        android:textColor="#000"
        android:textSize="7pt"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="125dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:text="비밀번호:"
        android:textColor="#000"
        android:textSize="7pt"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="154dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:text="전화번호:"
        android:textColor="#000"
        android:textSize="7pt"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="187dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:text="이메일:"
        android:textColor="#000"
        android:textSize="7pt"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="216dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주소:"
        android:textColor="#000"
        android:textSize="7pt"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="245dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성별:"
        android:textColor="#000"
        android:textSize="7pt"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="96dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가입자 정보"
        android:textColor="#000"
        android:textSize="12pt"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="320dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/radio2"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="363dp">

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="로봇을 사용하는 사용자"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="212dp" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="보호자/자원봉사자"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="244dp" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:checkedButton="@+id/radio3"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="89dp">

        <RadioButton
            android:id="@+id/radio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked2"
            android:text="남자"
            tools:layout_editor_absoluteX="252dp"
            tools:layout_editor_absoluteY="52dp" />

        <RadioButton
            android:id="@+id/radio4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked2"
            android:text="여자"
            tools:layout_editor_absoluteX="310dp"
            tools:layout_editor_absoluteY="52dp" />
    </RadioGroup>


    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="13"
        android:hint="ex)*************"
        android:inputType="numberPassword"
        android:textSize="7pt"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="145dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ex)홍길동"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="7pt"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="50dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ex)hong9393"
        android:inputType="text"
        android:text=""
        android:textSize="7pt"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="112dp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:hint="ex)010-XXXX-XXXX"
        android:inputType="phone"
        android:textSize="7pt"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="176dp" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="ex)hong@naver.com"
        android:inputType="textEmailAddress"
        android:textSize="7pt"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="205dp" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="ex)서울 특별시 중구 세종대로"
        android:inputType="textPostalAddress"
        android:textSize="7pt"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="234dp" />

    <EditText
        android:id="@+id/editText8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:inputType="textPostalAddress"
        android:textSize="7pt"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="266dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:text="다음 >"
        tools:layout_editor_absoluteX="253dp"
        tools:layout_editor_absoluteY="427dp" />


</android.support.constraint.ConstraintLayout>
